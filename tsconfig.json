{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "typings"],
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "outDir": "./js",
    "rootDir": "./ts"
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
